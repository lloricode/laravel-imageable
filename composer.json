{
    "name": "lloricode/laravel-imageable",
    "description": "Laravel Imageable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lloric Mayuga Garcia",
            "email": "lloricode@gmail.com"
        }
    ],
    "require": {       
        "php": ">=7.0",
        "intervention/image": "^2.4"
    },
    "require-dev": {
        "orchestra/testbench": "~3.3.0|~3.4.2|^3.5.0",
        "phpunit/phpunit" : "^5.7|6.2|^7.0",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Lloricode\\LaravelImageable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lloricode\\LaravelImageable\\Tests\\": "tests/",
            "App\\": "tests/models/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lloricode\\LaravelImageable\\Providers\\LaravelImageableProvider"
            ]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "format": [
            "./vendor/bin/php-cs-fixer fix src/  --show-progress=estimating",
            "./vendor/bin/php-cs-fixer fix tests/  --show-progress=estimating"
        ]
    }
}
